{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block body %}
<h2>je passe ma commande</h2>
    <p>choississez vos préférences avant de passer votre commande </p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
            {{ form_start(form,{action:path('order_recap')}) }}
                {{ form_end(form) }}
            {% endset %}

            {{ formHtml | replace({'[br]': '<br/>'})|raw }}
        </div>
        <div class="col-md-6">
            <b>récap de ma commande</b><br/>
            {% for product in cart %}
                <div class="row">
                    <div class="col-md-2">
                        <img src="/img/{{ product.article.image }}" alt="{{ product.article.title }}" height="75px">
                    </div>
                    <div class="col-md-8 my-auto">
                        {{ product.article.slug }}<br/>
                    </div>
                    <div class="col-md-2 my-auto"> x {{ product.quantity }}</div>
                </div>
            {% endfor %}

        </div>
    </div>
    <br/>
    <br/>
    <br/>
{% endblock %}
